<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_edit_back"
        android:layout_width="87dp"
        android:layout_height="38dp"

        android:layout_marginTop="40dp"
        android:backgroundTint="@color/orange"
        android:onClick="log_in"
        android:text="Späť"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:iconPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="219dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:text="Dátum narodenia:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInput_phoneEdit" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_PDF"
        android:layout_width="127dp"
        android:layout_height="81dp"

        android:layout_marginBottom="500dp"
        android:backgroundTint="@color/orange"
        android:onClick="log_in"
        android:text="Pridaj životopis"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:iconPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_ziadosti"
        android:layout_width="325dp"
        android:layout_height="46dp"

        android:layout_marginBottom="116dp"
        android:backgroundTint="@color/orange"
        android:onClick="log_in"
        android:text="Žiadosti"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:iconPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_odstran"
        android:layout_width="127dp"
        android:layout_height="81dp"

        android:layout_marginTop="47dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/light_red"
        android:onClick="log_in"
        android:text="Odstrániť profil"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:iconPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ziadosti"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_logout"
        android:layout_width="127dp"
        android:layout_height="81dp"

        android:layout_marginTop="47dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/light_red"
        android:onClick="log_in"
        android:text="Odhlásiť sa"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:iconPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_odstran"
        app:layout_constraintHorizontal_bias="0.342"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ziadosti"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_save"
        android:layout_width="127dp"
        android:layout_height="81dp"

        android:layout_marginBottom="264dp"
        android:backgroundTint="@color/orange"
        android:onClick="log_in"
        android:text="Ulož zmeny"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:iconPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="219dp"
        android:layout_height="20dp"
        android:layout_marginTop="60dp"
        android:text="Meno:"
        app:layout_constraintBottom_toTopOf="@+id/textInput_menoEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/textInput_menoEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="Meno Priezvisko"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textInput_hesloEdit"
        android:layout_width="177dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Heslo"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="219dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:text="e-mail:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInput_hesloEdit" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="207dp"
        android:layout_height="21dp"
        android:layout_marginTop="12dp"
        android:text="Heslo:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInput_menoEdit" />

    <EditText
        android:id="@+id/textInput_emailEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="adresa@email.sk"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/textInput_phoneEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="0910 123 456"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="219dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:text="tel. číslo:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInput_emailEdit" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="219dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:text="Dátum narodenia:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInput_phoneEdit" />

    <EditText
        android:id="@+id/textInput_dateEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="rrrr-mm-dd"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>
